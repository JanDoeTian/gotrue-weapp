{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2015",
    "noEmitOnError": false, // <-- 即使有错误也输出编译结果
    "skipLibCheck": true,    // <-- 忽略 node_modules 的类型检查

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "typedocOptions": {
    "excludeExternals": true
  }
}
